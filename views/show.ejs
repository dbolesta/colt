<% include partials/header %>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1><%= camp.name %></h1>
            <img src="<%= camp.image %>">
            <p><%= camp.description  %></p>
            
            <hr>
            <h1>Comments:</h1>
            <% camp.comments.forEach(function(comment){%>
             <div>
                 <p><strong><%= comment.author %> says:</strong></p>
                 <p><%= comment.text %></p>
                 
             </div>
            
            <% }) %>
            
            <a href="/campgrounds" class="btn btn-primary">Back to Campgrounds</a>
        </div> <!-- ./col -->
    </div> <!-- /.row-->
</div> <!-- /.container-->
<% include partials/footer %>